<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:orientation="vertical"
    tools:context=".LoginActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Theme.myrun"
            android:backgroundTint="@color/text"
            app:popupTheme="@style/Theme.myrun">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MyRun"
                android:textSize="30dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <ImageView
        android:layout_height="400dp"
        android:layout_width="match_parent"
        android:src="@drawable/path"/>


    <TableLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchColumns="*">


        <TableRow android:background="#000000">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:text="Distance\n"
                android:layout_marginBottom="1dp"
                android:gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:text="TIme\n"
                android:layout_marginBottom="1dp"
                android:gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#FFFFFF"
                android:textColor="#000000"
                android:text="Kcal\n"
                android:layout_marginBottom="1dp"
                android:gravity="center"/>

        </TableRow>


        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="10.25Km"
                android:gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="00:54:16"
                android:gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="451Kcal"
                android:gravity="center"/>

        </TableRow>

    </TableLayout>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="STOP"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:backgroundTint="#ECCEF5"
        android:layout_gravity="center"
        android:id="@+id/btnStop"/>

</LinearLayout>